    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: CTS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/application.py",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "gevent": true,
            "jinja": true
        },
        {
            "name": "Python: CTS DEBUG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/application.py",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": ["--log", "DEBUG"],
            "gevent": true,
            "jinja": true
        }
    ]
}